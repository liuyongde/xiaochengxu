/* pages/login/login.wxss */
.message {
  width:100%;
  height:40px;
  background-color: #f4f4f4;
}
.index_model{
  width: 100%;
  position: fixed;
}
.carousel{
  background-color: rebeccapurple;
}
.carousel_swiper{
  width: 100%;
  height: 400rpx;
  display: block;
  position: relative;
  background: #f4f4f4;
}
.carouselImg{
  width: 100%;
  height: inherit;
}
.message_img{
  margin:5px;
  width: 20px;
  height: 20px;
}
.message_index{
  width: 96%;
  margin: 6px auto;
  height: 30px;
  background-color: white;
  border-radius: 90px;
  display: flex;
}
.message_content{
  height: 30px;
  line-height: 30px;
  font-size: 0.5em;
}
.pro_info{
  margin-left:5px;
  height:120px;
  width:98%;
  display: flex;
}

.btn_saling_index {
  font-size:0.1em;
}